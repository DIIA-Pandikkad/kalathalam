<div class="row my-5">
  <form action="/result-search" method="GET">
    <div class="row g-2">
      <div class="col-md-3">
        <input type="text" placeholder="SEARCH BY PROGRAM CODE" class="form-control" name="pcode" id="pcode">
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </div>
  </form>
</div>
<div class="row my-5">

  <h3>{{result.pcode}} {{result.pname}}</h3>
  <br><br>
  {{#if result}}
  <div class="col-12">
    <div class="row g-3">
      {{#each result.data}}
      <div class="col-md-4">
        <div class="bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
          <div class="col-sm-4 ps-2">
            <img src="{{imageAdd}}" alt="" class="p-0 img-thumbnail rounded float-start">
          </div>
          <div class="col-sm-8 p-2">
            <h5>{{cname}}</h5>
            <p class="result-p" > Ad NO: <strong>{{cadno}}</strong>
            <br> House: <strong>{{house}}</strong>
            <br> Position: <strong>{{pos}}</strong>
            <br> Grade: <strong>{{grade}}</strong>
            <br> Points: <strong>{{score}}</strong></p>
          </div>
        </div>
      </div>
      {{/each}}
