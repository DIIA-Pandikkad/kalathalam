<style>
    body {
        background-color: #f2f2f2;
    }

    .login-form {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        margin: 50px auto;
        max-width: 700px;
        padding: 20px;
    }

    .login-form h1 {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    .login-form label {
        display: block;
        font-size: 16px;
        margin-bottom: 10px;
    }

    .login-form input[type="text"],
    .login-form input[type="password"],
    .login-form select, {
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 16px;
        padding: 10px;
        width: 100%;
    }

    .login-form button[type="submit"] {
        background-color: #4CAF50;
        border: none;
        border-radius: 3px;
        color: #fff;
        cursor: pointer;
        font-size: 16px;
        margin-top: 20px;
        padding: 10px;
        width: 100%;
    }

    .login-form button[type="submit"]:hover {
        background-color: #3e8e41;
    }

    .logoImg{
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<form action="/admin/programs" method="POST" class="login-form">
  
  <a href="/admin"><i class="fa-solid fa-arrow-left"></i>Back</a>
  <br><br>
  <h3>PROGRAM LIST ENTRY</h3>
  <br>
  <div class="form-group">
    <label for="pcode">PROGRAM CODE:</label>
    <input type="text" class="form-control" id="pcode" name="pcode" required>
  </div>
  <div class="form-group">
    <label for="pname">PROGRAM NAME:</label>
    <input type="text" class="form-control" id="pname" name="pname" required>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>