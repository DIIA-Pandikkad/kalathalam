<style>
  
  .navbar {
    padding-left: 30px;
    padding-right: 30px;
    padding-top: 20px;
  }

  .fa-bell {
    font-size: 25px;
  }

  .toggle-button {
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 20px;
  }

  .bar {
    width: 30px;
    height: 3px;
    background-color: #fff;
    transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  }

  /* JavaScript will add animation classes */
  .open .bar:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .open .bar:nth-child(2) {
    opacity: 0;
  }

  .open .bar:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .logimgside {
    width: 100%;
    border-radius: 10px;
  }


  .nav-item {
    border-radius: 0;
  }

  .arowicon {
    margin-top: 15px;
    font-size: 30px;
    margin-right: 235px;
    text-shadow: 0px 2px 10px #ffffff;
    background-color: #ffffff;
    border-radius: 50px;
  }

  .nav-link {
    font-size: 20px;
    font-weight: bold;
    background-color: rgb(0, 0, 0);
    border-radius: 10px;
    text-align: center;
    margin-bottom: 5px;
    color: #ffffffd8;
    width: 100%;
  }

  .navbar-nav .nav-link.active, .nav-link:hover{
    color: #ffffff
  }


  .btnSi{
    background-color: #000000;
    color: #ffffff;
    border-radius: 0px;
    width: 100%;
    height: 40px;
    font-size: 20px;
    font-weight: bold;
    border: none;
  }

  .offcanvas-body::-webkit-scrollbar {
    display: none;
    
  }

</style>


<nav class="navbar fixed-top">
  <div class="container-fluid">
    {{#if home}}
    <a href="/"><i class="fas fa-bell" style="color: #ffffff;" ></i></a>
    
    {{else}}
    <i class="fas fa-bell" style="opacity: 0;" ></i>
    {{/if}}

    <div class="toggle-button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions"
      aria-controls="offcanvasWithBothOptions" onmouseenter="toggleNav()" onmouseleave="toggleNav()">
      <div class="bar"></div>
      <div class="bar"></div>
      <div class="bar"></div>
    </div>
    <div class="offcanvas offcanvas-end " data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions"
      aria-labelledby="offcanvasWithBothOptionsLabel">
      <div class="offcanvas-header position-relative">
        <i class="arowicon fa-solid fa-circle-right position-absolute top-0 end-0" data-bs-dismiss="offcanvas"
          aria-label="Close" style="color: #000000;"></i>
        <div class="logarou">
          <img class="logimgside" src="https://i.ibb.co/CQ3n2k8/logo-kala.png" width="500px" alt="" srcset="">
        </div>

        
        {{!-- <i class="bi bi-arrow-right-circle-fill" data-bs-dismiss="offcanvas" aria-label="Close"></i> --}}
        {{!-- <button type="button" class="btn-arrow" data-bs-dismiss="offcanvas" aria-label="Close"></button> --}}
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav justify-content-end flex-grow-1 ">
          <li class="nav-item">
            <a class="nav-link active navbartext" aria-current="page" href="/">HOME</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbartext" href="/feeds">FEEDS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbartext" href="/gallery">GALLERY</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbartext" href="/dowloads">DOWNLOADS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbartext" href="/dashboard">RESULTS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbartext" href="/schedule">SCHEDULE</a>
          </li>

        </ul>
        
      </div>
      <div class="footer">
          <div class="signup">
            <a href="/signup" class="btn btnSi" role="button" aria-pressed="true">SIGN UP</a>
          </div>
        </div>
    </div>
  </div>
</nav>

<script>
  function toggleNav() {
    const toggleButton = document.querySelector('.toggle-button');
    toggleButton.classList.toggle('open');
  }

</script>
